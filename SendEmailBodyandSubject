Sub SendEmailWithSubjectAndBody()

    Dim OutlookApp As Object
    Dim OutlookMail As Object
    Dim emailSubject As String
    Dim emailBody As String
    Dim recipient As String

    ' Define email subject and recipient
    emailSubject = "VBA Test Email Sample 1"
    recipient = "Jordan.McKay@us.bosch.com"  ' Change to your recipient's email address

    ' Create the email body with just the notes/content you want
    emailBody = "Hello," & vbCrLf & vbCrLf
    emailBody = emailBody & "Here is the VBA test email sample 1 with body text only." & vbCrLf & vbCrLf
    emailBody = emailBody & "Best regards," & vbCrLf
    emailBody = emailBody & "Jordan McKay"  ' You can replace with your name

    ' Create the Outlook application object
    Set OutlookApp = CreateObject("Outlook.Application")
    Set OutlookMail = OutlookApp.CreateItem(0)

    ' Set up the email details
    With OutlookMail
        .To = recipient
        .Subject = emailSubject
        .Body = emailBody
        .Send ' Sends the email
    End With

    ' Clean up
    Set OutlookMail = Nothing
    Set OutlookApp = Nothing

End Sub
